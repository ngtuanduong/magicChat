  <div class="row w-100 gap-3 justify-content-around" id="loginPage">
    <div class="col-2" id="loginForm">
        <h3 style="color: white;font-weight: bold;font-size: 30px;">Login</h3>
        <br>
        <div class="input-group mb-3">
          <input type="text" class="form-control" id="userNameLogin" placeholder="Your name" aria-label="Username" aria-describedby="basic-addon1">
        </div>
        <div class="input-group mb-3">
          <input type="password" class="form-control" id="passwordLogin" placeholder="Secret Key" aria-label="Password" aria-describedby="basic-addon1">
        </div>
        <br>
        <button class="btn btn-primary btn-sm"  value="Register" id="btnLogin">Welcome</button>
        <br>
        <p style="color:aliceblue;">Don't have an account? <a style="color: #FFC436;" href="https://magichat.onrender.com/sign-up">Sign up</a></p>
      </div>
      <div class="col-5" id="welcomeText">
        <h1 style="color:var(--navi);margin-top: 50px;">Home is where you are.<br> Welcome back!</h1>
    </div>
  </div>
  <img id="loadingLogin" src="imgs/loading.gif" alt="">
  <img id="thumbnail" src="imgs/messenger.png" alt="">

